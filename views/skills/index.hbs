<h1>{{title}}</h1>

{{!-- Add link to add a new skill --}}
{{#if user}}
  <a href="/skills/add">Add a New Skill</a>
{{/if}}

{{!-- Display skill data --}}
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each dataset}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.category}}</td>
        <td>{{this.description}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
